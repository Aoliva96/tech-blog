<div>
  <h2>Login</h2>
  <form action="/login" method="post">
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" name="email" id="email-login" />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" id="password-login" />
    </div>
    <div class="form-group">
      <button type="submit">Login</button>
    </div>
    <div class="form-group" id="login-error">
      <h4 class="message"></h4>
      <div class="close-btn">X</div>
    </div>
  </form>
</div>

<div>
  <h2>Sign up</h2>
  <form action="/signup" method="post">
    <div class="form-group">
      <label for="username-signup">Username</label>
      <input type="text" name="username" id="username-signup" />
    </div>
    <div class="form-group">
      <label for="email-signup">Email</label>
      <input type="email" name="email" id="email-signup" />
    </div>
    <div class="form-group">
      <label for="password-signup">Password</label>
      <input type="password" name="password" id="password-signup" />
    </div>
    <div class="form-group">
      <label for="confirm-password-signup">Confirm Password</label>
      <input
        type="password"
        name="confirm-password"
        id="confirm-password-signup"
      />
    </div>
    <div class="form-group">
      <button type="submit">Sign up</button>
    </div>
    <div class="form-group" id="signup-error">
      <h4 class="message"></h4>
      <div class="close-btn">X</div>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>