<div class="pt-3 pb-1 px-3 bg-light-dark rounded-top-sm">
  <div class="card card-rounded bg-white">
    <h4 class="card-header bg-dark rounded-top-sm">Login</h4>
    <div class="card-body">
      <form action="/login" method="post">
        <div class="form-group">
          <label for="email-login">Email: </label>
          <input type="email" name="email-login" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password: </label>
          <input type="password" name="password-login" id="password-login" />
        </div>
        <div class="form-group">
          <button
            type="submit"
            class="login-form btn btn-md btn-light-dark"
          >Login</button>
        </div>
        <div class="form-group" id="login-error">
          <h4 class="message"></h4>
          <div class="close-btn" style="display: none;">X</div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="pt-3 pb-1 px-3 bg-light-dark rounded-bottom-md">
  <div class="card card-rounded bg-white">
    <h4 class="card-header bg-dark rounded-top-sm">Signup</h4>
    <div class="card-body">
      <form action="/signup" method="post">
        <div class="form-group">
          <label for="username-signup">Username: </label>
          <input type="text" name="username-signup" id="username-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">Email: </label>
          <input type="email" name="email-signup" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password: </label>
          <input type="password" name="password-signup" id="password-signup" />
        </div>
        <div class="form-group">
          <button
            type="submit"
            class="signup-form btn btn-md btn-light-dark"
          >Sign up</button>
        </div>
        <div class="form-group" id="signup-error">
          <h4 class="message"></h4>
          <div class="close-btn" style="display: none;">X</div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>