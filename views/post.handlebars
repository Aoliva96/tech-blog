<div class="py-3 px-3 bg-light-dark rounded-top-sm-bottom-md">
  <div class="post card card-rounded bg-white pb-2">
    <div class="card-header pb-1 pt-2 bg-dark rounded-top-sm">
      <h4>{{post.title}}</h4>
    </div>
    <div class="card-body pt-2 pb-0">
      <p>{{post.content}}</p>
      <hr />
      <p class="mt-2">Posted by
        {{post.user.username}}
        on
        {{formatDate post.date_created}}</p>
    </div>
  </div>
  <div class="card card-rounded bg-white mb-3">
    <h4 class="card-header bg-dark text-white rounded-top-sm mb-0">Comment on
      this post:</h4>
    <div class="card-body">
      <form action="/comment" method="post">
        <div class="form-group m-0 my-3">
          <textarea
            type="text"
            name="content-comment"
            id="content-comment"
            class="m-0 p-2 w-100"
          ></textarea>
        </div>
        <input type="hidden" name="post_id" value="{{post.id}}" />
        <div class="form-group">
          <button type="submit" class="btn btn-md btn-light-dark">Add Comment</button>
        </div>
        <div class="form-group" style="display: none;" id="comment-error">
          <h4 class="message"></h4>
          <div class="close-btn">X</div>
        </div>
      </form>
    </div>
  </div>
  <div class="card rounded-top-sm-bottom-md bg-white mb-3">
    {{#if post.comments.length}}
      <h4
        class="card-header bg-dark text-white rounded-top-sm mb-0"
      >Comments:</h4>
      <div class="card-body">
        {{#each post.comments as |comment|}}
          <div
            class="comment card card-rounded bg-white mt-2 mr-1"
            style="border: 1px solid var(--dark);"
          >
            <h5
              class="card-header bg-dark text-white rounded-top-sm mb-0"
              style="border-bottom: 1px solid var(--dark);"
            >
              {{comment.user.username}}
              on
              {{formatDate comment.date_created}}
              said:
            </h5>
            <p
              class="card-content bg-white p-3 pb-0 rounded-bottom-sm"
            >{{comment.content}}</p>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="card-body">
        <p class="pt-2">No comments yet.</p>
      </div>
    {{/if}}
  </div>
</div>